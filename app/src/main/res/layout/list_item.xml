<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/rootR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_weight="1"
        android:layout_gravity="start"
        android:padding="3dp"
        android:background="@drawable/yellow_back">
            <ImageView
                android:id="@+id/mImageReply"
                android:layout_width="150dp"
                android:scaleType="fitXY"
                android:layout_height="300dp" />
            <TextView
                android:id="@+id/textReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hhhhhh"
                android:visibility="gone"
                android:inputType="textMultiLine"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorBlack"
                android:textSize="17sp"   />
            <VideoView
                android:id="@+id/mVideoReply"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="300dp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/timeReply"
        android:layout_gravity="end"
        android:layout_width="match_parent"
        android:fontFamily="monospace"
        android:text="jjjjjj"
        android:textSize="12sp"
        android:layout_height="wrap_content" />

<ImageView
    android:id="@+id/timeImageReply"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_update"/>

</LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="2"
    android:layout_height="match_parent">

</LinearLayout>
<LinearLayout
    android:id="@+id/rootS"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:visibility="gone"
    android:gravity="end"
    android:layout_weight="1"
    android:padding="3dp"
    android:background="@drawable/yellow_back"
    android:orientation="vertical">

<ImageView
    android:id="@+id/mImageMessage"
    android:layout_width="150dp"
    android:scaleType="fitXY"
    android:visibility="gone"
    android:layout_height="300dp" />

        <TextView
            android:id="@+id/mTextMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hhhhhh"
            android:inputType="textMultiLine"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"            />
    <VideoView
        android:id="@+id/mVideoMessage"
        android:layout_width="wrap_content"
        android:layout_height="300dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginRight="1dp">

        <TextView
            android:id="@+id/mTextTime"
            android:layout_gravity="end"
            android:text="fffffffff"
            android:layout_width="wrap_content"
            android:fontFamily="monospace"
            android:textSize="12sp"
            android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/timeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_update"/>

</LinearLayout>
</LinearLayout>
</LinearLayout>